<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<% if current_user %>
  <p>Hello <%= current_user.email %>!</p>
  <p>You are a [<%= current_user.role %>]</p>
  <% if current_user.admin? %>
    There are <%= User.count %> users in the system
  <% end %>
  <p>
    You have successfully authenticated with your Devise account.
    You are now ready to interact with this application.
  </p>
  <%= link_to "Sign out", destroy_user_session_path, 'data-turbo-method': :delete %>
<% else %>
  <p>You are not signed in.</p>
  <div class="usa-button-group">
    <div class="usa-button-group__item">
      <%= button_to "Sign Up!", new_user_registration_path, class: "usa-button usa-button--outline" %>
    </div>
    <div class="usa-button-group__item">
      <%= button_to "Login", new_user_session_path, class: "usa-button" %>
    </div>
  </div>
<% end %>
